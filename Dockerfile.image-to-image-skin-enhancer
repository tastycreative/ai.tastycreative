# RunPod Image-to-Image Skin Enhancement Handler Container
FROM runpod/pytorch:2.2.1-py3.10-cuda12.1.1-devel-ubuntu22.04

# Set working directory
WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    git \
    wget \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Install Python requirements
COPY requirements-handler.txt /app/requirements.txt
RUN pip install --no-cache-dir --upgrade pip && \
    pip install --no-cache-dir -r requirements.txt

# Install ComfyUI
RUN git clone https://github.com/comfyanonymous/ComfyUI.git /app/comfyui && \
    cd /app/comfyui && \
    pip install -r requirements.txt

# Install Image-to-Image Skin Enhancement Custom Nodes
WORKDIR /app/comfyui/custom_nodes

# Essential nodes for image-to-image skin enhancement
RUN git clone https://github.com/ltdrdata/ComfyUI-Manager.git || true

# Core custom nodes used in image-to-image skin enhancement workflow
RUN git clone https://github.com/kijai/ComfyUI-KJNodes.git || true
RUN git clone https://github.com/cubiq/ComfyUI_essentials.git || true
RUN git clone https://github.com/chflame163/ComfyUI_LayerStyle_Advance.git || true
RUN git clone https://github.com/cubiq/ComfyUI_FaceAnalysis.git || true
RUN git clone https://github.com/BadCafeCode/masquerade-nodes-comfyui.git || true
RUN git clone https://github.com/Ryuukeisyou/comfyui_face_parsing.git || true
RUN git clone https://github.com/rgthree/rgthree-comfy.git || true

# Install dependencies for custom nodes including face parsing
RUN cd /app/comfyui/custom_nodes/ComfyUI-KJNodes && \
    pip install -r requirements.txt || true
RUN cd /app/comfyui/custom_nodes/ComfyUI_essentials && \
    pip install -r requirements.txt || true
RUN cd /app/comfyui/custom_nodes/ComfyUI_LayerStyle_Advance && \
    pip install -r requirements.txt || true
RUN cd /app/comfyui/custom_nodes/ComfyUI_FaceAnalysis && \
    pip install -r requirements.txt || true
RUN cd /app/comfyui/custom_nodes/rgthree-comfy && \
    pip install -r requirements.txt || true
RUN cd /app/comfyui/custom_nodes/masquerade-nodes-comfyui && \
    pip install -r requirements.txt || true
RUN cd /app/comfyui/custom_nodes/comfyui_face_parsing && \
    pip install -r requirements.txt || true

# Install additional packages for advanced image-to-image skin enhancement
RUN pip install --no-cache-dir transformers diffusers accelerate xformers || true
# Install torchvision and timm FIRST (required by LayerStyle)
RUN pip install --no-cache-dir torchvision timm || true
# Face parsing and segmentation packages
RUN pip install --no-cache-dir opencv-python mediapipe insightface onnx onnxruntime || true
# Advanced image processing packages (required by LayerStyle)
RUN pip install --no-cache-dir Pillow scikit-image rembg || true
# Segment anything dependencies
RUN pip install --no-cache-dir segment-anything ultralytics || true
# Reactor node dependencies for face analysis
RUN pip install --no-cache-dir face_recognition dlib || true

# Fix: Temporarily disable problematic HunyuanDiT model that requires PyTorch 2.4+
RUN mv /app/comfyui/comfy/ldm/hunyuan3dv2_1 /app/comfyui/comfy/ldm/hunyuan3dv2_1.disabled || true
# Fix: Comment out the import statement that's causing the error
RUN sed -i 's/import comfy.ldm.hunyuan3dv2_1/# import comfy.ldm.hunyuan3dv2_1/' /app/comfyui/comfy/model_base.py || true

# Go back to app directory
WORKDIR /app

# Copy handler and config files
COPY image_to_image_skin_enhancer_handler.py /app/handler.py
COPY extra_model_paths.yaml /app/extra_model_paths.yaml
COPY comfyui_manager_config.ini /app/comfyui_manager_config.ini
COPY fast_comfyui_start.sh /app/fast_comfyui_start.sh

# Make startup script executable
RUN chmod +x /app/fast_comfyui_start.sh

# Setup ComfyUI Manager configuration for faster startup - DISABLE COMPLETELY
RUN mkdir -p /app/comfyui/user/default/ComfyUI-Manager && \
    cp /app/comfyui_manager_config.ini /app/comfyui/user/default/ComfyUI-Manager/config.ini || true

# AGGRESSIVE: Completely disable ComfyUI Manager to prevent registry fetching
RUN mv /app/comfyui/custom_nodes/ComfyUI-Manager /app/comfyui/custom_nodes/ComfyUI-Manager.disabled || true

# Set environment variables for faster startup
ENV COMFYUI_MANAGER_NO_AUTO_UPDATE=1
ENV COMFYUI_NO_FETCH_REGISTRY=1  
ENV DISABLE_CUSTOM_NODE_AUTO_UPDATE=1
ENV COMFYUI_SKIP_REGISTRY_FETCH=1
ENV COMFYUI_DISABLE_MANAGER_UPDATES=1
ENV COMFYUI_OFFLINE_MODE=1

# Create necessary directories
RUN mkdir -p /workspace/models /workspace/output /workspace/logs /runpod-volume

# Add version label for tracking
LABEL version="1.0-image-to-image-skin-enhancement"
LABEL description="Image-to-image skin enhancement handler with advanced face parsing, person masking, and multi-LoRA support"
LABEL build_date="$(date -u +'%Y-%m-%dT%H:%M:%SZ')"

# Fix NumPy compatibility issues by ensuring we use NumPy < 2.0
RUN pip install --force-reinstall "numpy>=1.24.0,<2.0.0"

# Set the handler as the entry point
CMD ["python", "-u", "handler.py"]